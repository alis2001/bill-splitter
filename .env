# ===========================================
# BILL SPLITTER - ENVIRONMENT CONFIGURATION
# ===========================================

# Environment
ENVIRONMENT=development
APP_NAME=bill-splitter
APP_VERSION=1.0.0

# ===========================================
# HOST CONFIGURATION
# ===========================================

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
NETWORK_NAME=bill_splitter_network
NETWORK_SUBNET=172.25.0.0/16

# ===========================================
# API GATEWAY CONFIGURATION (Node.js + Express)
# ===========================================
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=0.0.0.0
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
API_CORS_ORIGIN=*
API_REQUEST_TIMEOUT=30000

# ===========================================
# SERVICES CONFIGURATION
# ===========================================

# Auth Service (C++)
AUTH_SERVICE_HOST=auth-service
AUTH_SERVICE_PORT=8001
AUTH_JWT_SECRET=your_super_secure_jwt_secret_key_min_32_chars
AUTH_JWT_EXPIRY=24h
AUTH_BCRYPT_ROUNDS=12

# Bill Service (C++)
BILL_SERVICE_HOST=bill-service
BILL_SERVICE_PORT=8002
BILL_MAX_PARTICIPANTS=50
BILL_MAX_EXPENSES=100

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=bill_splitter_db
DB_USER=billsplitter_user
DB_PASSWORD=secure_db_password_123
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30
DB_SSL_MODE=disable

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_123
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10
REDIS_SESSION_TTL=86400

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
FRONTEND_PORT=8081
FRONTEND_HOST=0.0.0.0
REACT_NATIVE_PACKAGER_HOSTNAME=0.0.0.0
API_BASE_URL=http://localhost:8000

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
COMPOSE_PROJECT_NAME=bill-splitter
RESTART_POLICY=unless-stopped

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# ===========================================
# HEALTH CHECK CONFIGURATION
# ===========================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HOST_IP=192.168.1.123
